<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_55sdp"
            android:background="#29593e"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/menu" />

        <TextView
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_55sdp"
            android:background="#29593e"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp"
            android:text="R-Mart"
            android:textColor="#edf2ef"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/navigationicon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_gravity="right"
            android:background="#29593e"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/flags" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/LinCartcount">
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_gravity="right"
            android:background="#29593e"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/scart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circletextview"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:onClick="onClick"
                android:id="@+id/txtCartCount"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="cart"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/moreIcon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_gravity="right"
            android:background="#29593e"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/more" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layoutboder"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_35sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/searchicon" />

        <EditText
            android:id="@+id/edt_txtsearch"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_30sdp"
            android:hint="Apko Kya Chahiye? "
            android:padding="@dimen/_5sdp"
            android:background="@android:color/transparent"
            />


    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchLV" />
</LinearLayout>